[init] 
  defaultBranch = main

[pull] 
  rebase = true

[commit]
  verbose = true
  gpgsign = true

[color]
  ui = true

[color "branch"]
  current = yellow reverse
  local   = yellow
  remote  = green 

[color "diff"]
  meta = yellow bold
  frag = magenta bold
  new  = green bold

